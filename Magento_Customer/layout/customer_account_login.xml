<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <!-- customer.login.wrapper -->

        <move element="customer_form_login" destination="customer.login.wrapper"/>
        <referenceContainer name="customer.login.container">
            <container name="customer.login.wrapper" htmlTag="div" htmlClass="customer-login-wrapper"/>
        </referenceContainer>

        <!-- customer.new.wrapper -->

        <move element="customer.new" destination="customer.new.wrapper"/>
        <referenceContainer name="customer.login.container">
            <container name="customer.new.wrapper" htmlTag="div" htmlClass="customer-new-wrapper"/>
        </referenceContainer>

    </body>
</page>
